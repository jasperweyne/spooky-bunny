{% extends 'admin/layout.html.twig' %}

{% if page_title is not defined %}
    {% set page_title = 'Accounts' %}
    
    {% block top %}
        {% embed 'admin/listview.html.twig' %}
            {% set resultcount = accounts|length %}
        {% endembed %}
    {% endblock %}
{% endif %}

{% block body %}
    <div class="table">
        <table>
            <thead>
                <tr>
                    <th>Naam</th>
                    <th>Geactiveerd</th>
                    <th>Id</th>
                    <th>Administrator</th>
                </tr>
            </thead>
            <tbody>
            {% for account in accounts|sort((a, b) => (a.person.canonical ?? '') <=> (b.person.canonical ?? '')) %}
                <tr>
                    <td><a href="{{ path("admin_security_show", { 'id': account.authId }) }}">{{ account.person.canonical ?? '{onbekend}'}}</a></td>
                    <td>{{ account.password ? 'Ja' : 'Nee' }}</td>
                    <td>{{ account.authId }}</td>
                    <td>{{ 'ROLE_ADMIN' in account.roles ? 'Ja' : 'Nee' }}</td>
                </tr>
            {% else %}
                <tr>
                    <td>Geen accounts.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
