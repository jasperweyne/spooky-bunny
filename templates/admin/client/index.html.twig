{% extends 'admin/layout.html.twig' %}

{% if page_title is not defined %}
    {% set page_title = 'Clients' %}
    
    {% block top %}
        {% embed 'admin/listview.html.twig' %}
            {% set resultcount = clients|length %}
        {% endembed %}
    {% endblock %}
{% endif %}

{% block body %}
    <div class="table">
        <table>
            <thead>
                <tr>
                    <th>Identifier</th>
                </tr>
            </thead>
            <tbody>
            {% for client in clients %}
                <tr>
                    <td><a href="{{ path("admin_client_show", { 'id': client.identifier }) }}"> {{ client.identifier }} </a></td>
                </tr>
            {% else %}
                <tr>
                    <td>Geen clients.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
