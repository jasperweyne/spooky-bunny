{% extends 'admin/layout.html.twig' %}

{% if page_title is not defined %}
    {% set page_title = client.identifier %}
    
    {% block buttons %}
        <a href="{{ path("admin_client_edit", { 'id': client.identifier }) }}">Bewerken</a>
        <a href="{{ path("admin_client_delete", { 'id': client.identifier }) }}">Verwijderen</a>
        <a href="{{ path('admin_client_index') }}">Terug</a>
    {% endblock %}
{% endif %}

{% block body %}
    <div class="table">
        <table>
            <tbody>
                <tr>
                    <th>Identifier</th>
                    <td>{{ client.identifier }}</td>
                </tr>
                <tr>
                    <th>Secret</th>
                    <td>{% if client.secret %}{{ client.secret }}{% else %}<i>Geen secret</i>{% endif %}</td>
                </tr>
                <tr>
                    <th>Actief</th>
                    <td>{{ client.active ? 'Ja' : 'Nee' }}</td>
                </tr>
                <tr>
                    <th>Ongehashte PKCE toegestaan</th>
                    <td>{{ client.plainTextPkceAllowed ? 'Ja' : 'Nee' }}</td>
                </tr>
                <tr>
                    <th>Redirect Uris</th>
                    <td>
                        <table>
                            <tbody>
                            {% for redirect in client.redirectUris %}
                                <tr>
                                    <td>{{ redirect }}</td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td>Geen uris.</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </td>
                </tr>
                <tr>
                    <th>Grants</th>
                    <td>
                        <table>
                            <tbody>
                            {% for grant in client.grants %}
                                <tr>
                                    <td>{{ grant }}</td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td>Geen grants.</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </td>
                </tr>
                <tr>
                    <th>Scopes</th>
                    <td>
                        <table>
                            <tbody>
                            {% for scope in client.scopes %}
                                <tr>
                                    <td>{{ scope }}</td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td>Geen scopes.</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}